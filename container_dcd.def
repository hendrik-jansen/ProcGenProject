Bootstrap: docker
From: ubuntu:20.04

%post
    set -e
    export DEBIAN_FRONTEND=noninteractive

    # Update and install prerequisites
    apt-get update && apt-get install -y \
        build-essential \
        wget \
        curl \
        git \
        python3.8 \
        python3.8-dev \
        python3-pip

    # symlink python3.8 to `python` and `pip`
    ln -s /usr/bin/python3.8 /usr/local/bin/python
    ln -s /usr/bin/pip3 /usr/local/bin/pip

    pip install cloudpickle==1.2.0 gym==0.13.1 gym-minigrid==1.0.1 networkx numpy pandas torch matplotlib seaborn \
        tensorflow lempel_ziv_complexity tqdm gin-config cma Box2D geopandas pyvirtualdisplay \
        scikit-learn torchvision treelib pyglet

    bash -c "
    git clone -b tf2 https://github.com/openai/baselines.git
    cd baselines
    pip install -e .    
    "

%environment
    export PATH=/usr/local/bin:$PATH
    export PYTHONPATH=/usr/lib/python3.8

%runscript
    "$@"